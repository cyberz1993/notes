import os

os.getcwd() 
os.mkdir("new") 
os.rmdir("new") 
os.listdir() 
os.listdir("/") 

#check if item is a file
for items in os.listdir():
  if os.path.isfile(items): 
    print(items + "is a file") 
  else: 
    print(items + "is a directory") 


#print only specific file types 
import glob 

item = glob.glob(os.path.join(".". "*.py") 
for i in item: 
  print(i) 



